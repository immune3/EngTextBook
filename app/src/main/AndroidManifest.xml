<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yellowgreen.engtextbook" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name=".Activity.Tutorial"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name=".Activity.BaseActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name=".Activity.Contents"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name=".Activity.Classification"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name=".Activity.Explanation"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name=".Activity.PracticePage"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name=".Activity.Splash"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>